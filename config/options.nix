{
  opts.number = true;
  opts.relativenumber = false;
  opts.tabstop = 4;
  opts.shiftwidth = 4;
  opts.softtabstop = 4;
# always use spaces instead of tabs
  opts.expandtab = true;
  opts.cursorline = true;
  opts.foldmethod = "indent";
  opts.foldenable = true;
  opts.foldlevelstart = 99;
# bracket matching
  opts.showmatch = true;
  opts.wildmenu = true;
  opts.wildmode = "longest:full,full";
  opts.smartindent = true;
  opts.wrap = false;
  opts.linebreak = true;
  opts.title = true;
# always show the tab bar
  opts.showtabline = 2;
# keep n lines above and below the cursor
  opts.scrolloff = 10;
# keep n lines left and right of the cursor
  opts.sidescrolloff = 10;
# Git gutter
  opts.mouse = "a";
  opts.list = true;
}

